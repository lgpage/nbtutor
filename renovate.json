{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchPackagePatterns": ["eslint"],
      "labels": ["linting"]
    },
    {
      "matchDepTypes": ["optionalDependencies"],
      "addLabels": ["optional"]
    }
  ],
  "schedule": [
    "before 6am"
  ],
  "configMigration": true,
  "rangeStrategy": "bump",
  "dependencyDashboardTitle": "chore: dependency dashboard"
}
